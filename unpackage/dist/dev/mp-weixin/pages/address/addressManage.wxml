iew class="row b-b"><text class="tit">{{i18n.address.zipcode}}</text><input class="input" type="text" maxlength="{{6}}" placeholder="{{i18n.address.zipcode}}" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','zipcode','$event',[]],['addressData']]]]]}}" value="{{addressData.zipcode}}" bindinput="__e"/></view><view class="row default-row"><text class="tit">{{i18n.setDefault}}</text><switch checked="{{addressData.default}}" color="#09A0F7" data-event-opts="{{[['change',[['switchChange',['$event']]]]]}}" bindchange="__e"></switch></view><button data-event-opts="{{[['tap',[['confirm',['$event']]]]]}}" class="add-btn" bindtap="__e">{{i18n.saveBtn}}</button><block wx:if="{{manageType==='edit'}}"><button data-event-opts="{{[['tap',[['del',['$event']]]]]}}" class="del-btn" bindtap="__e">{{i18n.delBtn}}</button></block></view>