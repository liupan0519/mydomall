.voucher {
  background-color: #fff;
  margin: 20rpx 20rpx 40rpx 20rpx;
  padding: 30rpx;
}
.voucher-text .voucher-title {
  color: #303133;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.voucher-text .voucher-merchant {
  color: #909399;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.voucher-text .voucher-desc {
  color: #909399;
  font-size: 24rpx;
  margin-top: 40rpx;
}
.voucher-text .voucher-desc .title {
  margin-bottom: 10rpx;
  color: #606266;
  font-size: 28rpx;
}
.voucher-text .voucher-date {
  color: #2979ff;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.voucher-text .voucher-divider {
  margin: 40rpx 0 20rpx 0;
}
.voucher-text .voucher-code {
  margin: 0 15%;
  background-color: #f5f5f5;
  padding: 5px;
  text-align: center;
  color: #909399;
  font-size: 28rpx;
}
.voucher-text .voucher-qrcode {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
